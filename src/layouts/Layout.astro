---
import AppFooter from "../components/AppFooter.astro";
import AppHeader from "../components/AppHeader.astro";
import { getLangFromUrl } from '../i18n/utils';
import '../assets/style.css';
const lang = getLangFromUrl(Astro.url);

---


<!DOCTYPE html>
<html lang={lang} class="light">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
		<link
		  rel="icon"
		  type="image/png"
		  href="favicon-default-16x16.png"
		  sizes="16x16"
		/>
		<link
		  rel="icon"
		  type="image/png"
		  href="favicon-default-24x24.png"
		  sizes="24x24"
		/>
		<link
		  rel="icon"
		  type="image/png"
		  href="favicon-default-32x32.png"
		  sizes="32x32"
		/>
		<link
		  rel="icon"
		  type="image/png"
		  href="favicon-default-64x64.png"
		  sizes="64x64"
		/>
		<link
		  rel="icon"
		  type="image/png"
		  href="favicon-default-96x96.png"
		  sizes="96x96"
		/>
		
		<meta name="apple-mobile-web-app-title" content="Parolla" />
		<meta name="apple-mobile-web-app-capable" content="yes" />
		<meta name="apple-mobile-web-app-status-bar-style" content="default" />

		<link rel="apple-touch-icon" sizes="76x76" href="apple-touch-icon-76x76.png" />
		<link rel="apple-touch-icon" sizes="72x72" href="apple-touch-icon-72x72.png" />
		<link rel="apple-touch-icon" sizes="60x60" href="apple-touch-icon-60x60.png" />
		<link rel="apple-touch-icon" sizes="57x57" href="apple-touch-icon-57x57.png" />
		<link rel="apple-touch-icon" sizes="152x152" href="apple-touch-icon-152x152.png" />
		<link rel="apple-touch-icon" sizes="144x144" href="apple-touch-icon-144x144.png" />
		<link rel="apple-touch-icon" sizes="192x192" href="apple-touch-icon-192x192.png" />
		<link rel="apple-touch-icon" sizes="120x120" href="apple-touch-icon-120x120.png" />

		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="Découvrez Parolla, votre compagnon d'apprentissage de la langue corse. Évaluez vos compétences, créez un parcours personnalisé et participez à une communauté dynamique pour un apprentissage interactif et personnalisé. Explorez une nouvelle façon d'apprendre la langue corse, où que vous soyez et à tout moment.">
		<title>Parolla - Assistant de Corse</title>

		<link href="https://fonts.googleapis.com/css2?family=Urbanist:wght@400;500;600;700&display=swap" rel="stylesheet">
		<style>
			:global {
			  [data-rmiz-wrap='visible'],
			  [data-rmiz-wrap='hidden'] {
				width: 100%;
				height: 100%;
				display: block;
			  }
			}</style>
	</head>
	<body class="bg-white dark:bg-gray-900">
		<AppHeader/>
		<slot />
		<AppFooter/>
	</body>
</html>
<style>
	html {
		font-family: Urbanist, sans-serif;
		scroll-behavior: smooth;
	}

	body {
		margin: 0;
	}
</style>
